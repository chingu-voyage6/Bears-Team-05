{
  "name": "bears-team-05",
  "version": "1.0.0",
  "description": "Multi player tetris",
  "main": "server.js",
  "repository": "https://github.com/chingu-voyage6/Bears-Team-05.git",
  "author": "Chingu Bears Team #5",
  "license": "MIT",
  "scripts": {
    "client": "cd client && yarn start",
    "server": "nodemon server/index.js",
    "start": "nodemon server/index.js",
    "server:local": "export NODE_ENV=testing && nodemon server/index.js",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "run": "concurrently --kill-others-on-fail \"npm run server\" \"cd client && npm start\"",
    "heroku-postbuild": "cd client && npm install --only=dev && npm install && npm run build"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "body-parser": "^1.18.3",
    "cookie-session": "^2.0.0-beta.3",
    "cors": "^2.8.4",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "mongoose": "^5.1.6",
    "nodemon": "^1.17.5",
    "passport": "^0.4.0",
    "passport-google-oauth": "^1.0.0",
    "path": "^0.12.7",
    "socket.io": "^2.1.1"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.5",
    "concurrently": "^3.5.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.9.1"
  }
}
